<!DOCTYPE html>
<html lang='en'>
	<head>
		<meta charset='UTF-8'>
		<link rel="stylesheet" href="css/style.css">
		<title>Email Analyzer</title>
	</head>

	<body>
		<h1>Email Analyzer</h1>
    <fieldset>
        <form action="/" method="post">
          <input name="file" type="file" class="ghost-input" placeholder="" required>
          <input type="submit" class="ghost-button" value="Submit">
        </form>
    </fieldset>
		<div class="results">
			<h2 class="title">Results:</h2>
			<div class="results_data">
				<h4 class="sender">Sender: </h4>
				<h6 class="sender-result">{{sender}}</h6>
				<h4 class="email">Sender email: </h4>
				<h6 class="email-result">{{senderEmail}}</h6>
				<h4 class="content_type">Content-type: </h4>
				<h6 class="content_type-result">{{mainType}}</h6>
				<h4 class="text_part">Text part: {{textPart}}</h4>
				<h6 class="text-encoding">{{textEncoding}}</h6>
				<h6 class="text-lines">{{textLines}}</h6>
				<h4 class="html_part">HTML part: {{htmlPart}}</h4>
				<h6 class="html-encoding">{{htmlEncoding}}</h6>
				<h6 class="html-media">{{mediaQuery}}</h6>
			</div>
		</div>
	</body>

	<script type="text/javascript" src='./index.js'></script>

</html>
